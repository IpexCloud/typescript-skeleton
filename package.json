{
  "name": "typescript-skeleton",
  "author": "IpexCloud",
  "version": "0.0.0",
  "description": "TypeScript quick start skeleton",
  "license": "MIT",
  "scripts": {
    "build": "rimraf build && tsc -p tsconfig.json && ttsc",
    "postinstall": "rimraf build && tsc -p tsconfig.json && ttsc",
    "build:watch": "nodemon --watch src --watch config --exec \"ts-node -r tsconfig-paths/register\" src/main.ts",
    "start": "node build/src/main",
    "typeorm": "ts-node -r ./tsconfig.json ./node_modules/typeorm/cli.js",
    "test": "jest",
    "test:watch": "nodemon -e ts,json --watch src --watch config --watch tests --exec jest -- --collectCoverage false",
    "lint": "eslint \"**/*.+(ts|js)\" --fix"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.9.0",
    "apollo-server-express": "^2.19.2",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "class-validator-jsonschema": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-winston": "^4.1.0",
    "graphql": "^15.5.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "mysql": "^2.18.1",
    "routing-controllers": "^0.9.0",
    "routing-controllers-openapi": "^3.1.0",
    "swagger-ui-express": "^4.1.6",
    "tslib": "~2.3.0",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.34",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.24",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^13.13.52",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "tsconfig-paths-jest": "0.0.1",
    "tsutils": "~3.21.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.5"
  }
}
